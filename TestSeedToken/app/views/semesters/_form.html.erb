<%= form_for(@semester) do |f| %>
  <% if @semester.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@semester.errors.count, "error") %> prohibited this semester from being saved:</h2>

      <ul>
      <% @semester.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :year %><br />
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :term %><br />
    <%= f.text_field :term %>
  </div>
  <div class="field">
    <%= f.label :units %><br />
    <%= f.text_field :units %>
  </div>
  <div class="field">
    <%= f.label :maximum %><br />
    <%= f.text_field :maximum %>
  </div>

  <div class="filed">
    <%= f.label :lesson_tokens, "Courses" %>
    <%= f.text_field :lesson_tokens, "data-pre" => @semester.courses.to_json(:only => [:id, :name]) %>
  </div>

  <br><br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
